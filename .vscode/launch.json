{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Webpack Config",
            "program": "${workspaceFolder}/node_modules/.bin/webpack-cli",
            "cwd": "${workspaceFolder}/angular-test",
            "args": [
                "--config",
                "extra-webpack.config.js",
                "--mode",
                "development"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "${workspaceFolder}/angular-test/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Angular Config",
            "program": "${workspaceFolder}/angular-test/node_modules/.bin/ng",
            "cwd": "${workspaceFolder}/angular-test",
            "args": [
                "build"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "${workspaceFolder}/angular-test/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current TS",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "UT Tests",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "outFiles": [
                "${workspaceRoot}/dist"
            ],
            "args": [
                "--config",
                "jest-ut.config.js",
                "--runInBand"
            ],
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "E2E Tests",
            "outFiles": [
                "${workspaceRoot}/dist"
            ],
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "--config",
                "jest-e2e-plainwebpack.config.js",
                "--runInBand"
            ],
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "vscode-jest-tests-inutil",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--config",
                "jest-ut.config.js",
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
